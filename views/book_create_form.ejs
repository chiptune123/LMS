<h1><%= title %></h1>

<form action="" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value=""> <br>
    <label for="authors">Author:</label>
    <select name="authors" id="authors">
        <% for(author of author_list) { %>
        <option value="<%= author.id %>"><%= author.name %></option>
        <% } %>
    </select>
    <br>
    <label for="subjects">Subject:</label>
    <select name="subjects" id="subjects">
        <% for(subject of subject_list) { %>
        <option value="<%= subject.id %>"><%= subject.name %></option>
        <% } %>
    </select>
    <br>
    <label for="description">Description:</label> <br>
    <textarea id="description" name="description" rows="10" cols="70"></textarea> <br>
    <label for="publisher">Publisher:</label> 
    <input type="text" name="publisher" id="publisher"> <br>
    <label for="publishDate">Publish Date:</label>
    <input type="date" name="publishDate" id="publishDate">	<br>
    <label for="pageNumber">Page Number:</label>
    <input type="number" name="pageNumber" id="pageNumber">	<br>
    <label for="price">Price:</label>
    <input type="number" name="price" id="price">	<br>
    <label for="quantity">Quantity: </label>
    <input type="number" name="quantity" id="quantity">	<br>
    <label for="ISBN_tenDigits">ISBN 10:</label>
    <input type="text" name="ISBN_tenDigits" id="ISBN_tenDigits">	<br>
    <label for="ISBN_thirteenDigits">ISBN 13:</label>
    <input type="text" name="ISBN_thirteenDigits" id="ISBN_thirteenDigits">	<br>
    <label for="coverPicturePath">Cover Picture Path:</label>
    <input type="text" name="coverPicturePath" id="coverPicturePath">	<br>
    <label for="uniqueBarcode">Unique Barcode:</label>
    <input type="text" name="uniqueBarcode" id="uniqueBarcode">	<br>
    <label for="Rating">Rating:</label>
    <input type ="number" id="rating" name="rating" min="0" max="5" step="any"> <br>
    
    <button type="submit">Submit</button> 
</form>
