<h1><%= title %></h1>

<% if (all_book_by_author.length > 0) { %>
    <h3>Please remove all those book before delete this author!</h3>
    <ul>
      <% for(value of all_book_by_author) { %>
          <li>Title: <%= value.title %></li>
          <li>Author: <%= value.author %></li>
          <li>Description: <%= value.description %></li>
          <li>Publisher: <%= value.publisher %></li>
          <li>ISBN 10 Digits: <%= value.ISBN_tenDigits %></li>
          <li>ISBN 13 Digits: <%= value.ISBN_thirteenDigits %></li>
          <li>Quantity: <%= value.quantity %></li>
      <% } %>
    </ul>
<% } else { %>
  <h3>Do you want to delete this author?</h3>
  <p>Author name: <%= author_detail.name %></p>
  <p>Biography: <%= author_detail.bio %></p>
  <p>Profile picture path: <%= author_detail.profilePicturePath %></p>
  <p>Delete status: <%= author_detail.deleteStatus %></p>
  <p>Delete reason: <%= author_detail.deleteReason %></p>
  <form method="post" action="">
    <button type="submit">Delete</button>
  </form>
<% } %>