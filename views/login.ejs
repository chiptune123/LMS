<h1><%= title %></h1>
<form method="post" action="">
  <label for="username">Username: </label>
  <input id="username" name="username" type="text" placeholder="Enter your username" <% if (user) { %>
      value="<%= user.username %>"
  <% } %>> <br>
  <label for="password">Password: </label>
  <input id="password" name="password" type="password" placeholder="Enter your password" <% if (user) { %>
      value="<%= user.password %>"
  <% } %>> <br>
  <button type="submit">Submit</button>
</form>

<% if (errors) { %>
    <ul>
      <% for(value of errors){ %>
          <li><%= value.msg %></li>
      <% } %>
    </ul>
<% } %>